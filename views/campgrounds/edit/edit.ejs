<% layout('layouts/boilerplate')%>

<div class="edit"></div>
<div class="row">
  <h1 class="text-center">Edit Campground</h1>
  <div class="col-6 offset-3">
    <form
        action="/admin/home/<%= campground.id %>?_method=PUT"
        method="POST"
        novalidate
        class="validatedForm"
        >
        <div class="mb-3">
          <label class="form-label" for="Name">Name</label>
          <input
              class="form-control"
              type="text"
              id="name"
              name="campground[Name]"
              value="<%= campground.Name %>"
              required
              />
              <div class="valid-feedback">Looks Good!!</div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="DOB">DOB</label>
          <input
              class="form-control"
              type="text"
              id="DOB"
              name="campground[Dob]"
              value="<%= campground.Dob %>"
              required
              />
              <div class="valid-feedback">Looks Good!!</div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="Category">Category</label>
          <input
              class="form-control"
              type="text"
              id="Category"
              name="campground[Category]"
              value="<%= campground.Category %>"
              required
              />
              <div class="valid-feedback">Looks Good!!</div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="Father">Father's Name</label>
          <input
              class="form-control"
              type="text"
              id="father"
              name="campground[father]"
              value="<%= campground.father %>"
              required
              />
              <div class="valid-feedback">Looks Good!!</div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="age">Age</label>
          <div class="input-group">
            <span class="input-group-text" id="price-label"></span>
            <input
                type="text"
                class="form-control"
                id="age"
                placeholder="0.00"
                aria-label="Username"
                aria-describedby="price-label"
                name="campground[age]"
                value="<%= campground.age %>"
                required
                />
                <div class="valid-feedback">Looks Good!!</div>
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="Address">Address</label>
          <textarea
              class="form-control"
              type="text"
              id="Address"
              name="campground[Address]"
              required
              >
              <%= campground.Address %></textarea
            >
            <div class="valid-feedback">Looks Good!!</div>
        </div>
        <div class="mb-3">
          <button class="btn btn-info">Edit Campground</button>
        </div>
    </form>
    <a href="/admin/home">Back to Campgrounds</a>
  </div>
</div>
</div>
