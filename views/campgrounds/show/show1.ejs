<% layout('layouts/boilerplate')%>

<div class="new">
  <div class="row">
    <div class="col-6 offset-3">
      <div class="card mb-3">
        <h1><%= campground.fname %> <%= campground.lname%></h1>
        <div class="card-body">
          <h5 class="card-title"><%= campground.email %></h5>
          <p class="card-text"><%= campground.address %></p>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item text-muted"><%= campground.date %></li>
          <li class="list-group-item"><%= campground.phone %></li>
          <li class="list-group-item"><%= campground.gender %></li>
          <li class="list-group-item"><%= campground.group %></li>
          <li class="list-group-item">
            <%= campground.city %>, <%= campground.state %>-<%= campground.zip
            %>
          </li>
        </ul>
        <div class="card-body">
          <form
            class="d-inline"
            method="POST"
            action="/admin/dl/<%= campground.id%>?_method=DELETE"           
          >
          <button class="btn btn-danger">Delete</button>
        </form>
        
          <a class="card-link btn btn-success" href="/admin/dl">Home</a>
        </div>
        <footer class="card-footer text-muted">2 Days Ago</footer>
      </div>
    </div>
  </div>
  <div class="for_spacing"></div>
</div>

<style>
  .new .for_spacing {
    margin-bottom: 5rem;
    margin-top: 5rem;
  }
  .new .btn {
    margin: 10px;
    padding-right: 15px;
    padding-left: 15px;

    font-size: 1.5rem;
  }

  .new h1 {
    margin-left: 10px;
    margin-top: 10px;
    margin-bottom: 10px;

    font-family: "Montserrat", sans-serif;
    font-size: 2rem;
  }
  .new p {
    font-family: "Roboto", sans-serif;
    font-size: 1.5rem;
  }
  .new li {
    font-family: "Source Sans Pro", sans-serif;
    font-size: 1.5rem;
  }
</style>
