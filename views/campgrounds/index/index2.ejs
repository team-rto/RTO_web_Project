<% layout('layouts/boilerplate')%>
<div class="my-8 text-center display-3">All Users Applied For RC</div>

<div class="container">
  <div class="row">
    <% for (let campground of campgrounds) {%>
    <div class="col-4">
      <div
        class="p-3 m-1 text-center border-4 shadow-lg card border-info rounded-3"
      >
        <img
          class="shadow card-img-top"
          src="https://picsum.photos/200"
          alt="Card image cap"
          style="border-radius: 100%"
        />

        <div class="card-body">
          <h1><%= campground.fname %> <%= campground.lname %></h1>
          <h5 class="card-title"><%= campground.pdate %></h5>
          <p class="card-text"><%= campground.mname %></p>
          <p class="card-text"><%= campground.bl %></p>
          <p class="card-text">
            <small class="text-muted"><%= campground.bphone %> </small>
          </p>
          <a
            href="/admin/rc/<%= campground.id %>"
            class="shadow btn btn-info btn-lg rounded-pill"
          >
            View
            <p><%= campground.fname %> <%= campground.lname %></p>
          </a>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>
